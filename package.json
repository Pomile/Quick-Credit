{
  "name": "Quick-Credit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals.This\r helps solve problems of financial inclusion as a way to alleviate poverty and empower low\r income earners.",
  "main": "SERVER/server.js",
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "**/src/",
      "**/src/controller/*"
    ],
    "exclude": [
      "**/spec/**",
      "**/src/middleware/validation/**",
      "**/src/models/**",
      "SERVER/src/data.js",
      "dist/"
    ]
  },
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run test:mocha",
    "local:test": "npm run test:db:migrate && npm run seed:test && npm run test",
    "test:mocha": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text npm run mocha",
    "test-with-nodemon": "nodemon --watch . --exec npm run test",
    "mocha": "mocha  --require @babel/polyfill --require @babel/register  ./SERVER/spec/user.js",
    "start:webpack": "webpack",
    "start:webpack-dev-watch": "webpack -d --watch",
    "start:webpack-devServer": "webpack-dev-server --open",
    "start:dev": "nodemon --watch . --exec babel-node ./Server/bin/www",
    "start": "node ./dist/bin/www",
    "build": "rimraf dist && mkdir dist && npm run build-babel",
    "build-babel": "babel ./SERVER/ -d dist",
    "test:db:migrate": "cross-env NODE_ENV=test npm run db:migrate",
    "db:migrate": "babel-node ./SERVER/src/migration/migrate.js",
    "seed:test": "cross-env NODE_ENV=test npm run seed",
    "seed": "babel-node ./SERVER/src/seeder/seeder.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pomile/Quick-Credit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pomile/Quick-Credit/issues"
  },
  "homepage": "https://github.com/Pomile/Quick-Credit#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.4",
    "babel-loader": "^8.0.5",
    "babel-plugin-istanbul": "^5.1.4",
    "clean-webpack-plugin": "^2.0.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.0",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "supertest": "^4.0.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.3.1"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcrypt": "^3.0.6",
    "dotenv": "^8.0.0",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "core-util-is": "^1.0.2",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0"
  }
}
